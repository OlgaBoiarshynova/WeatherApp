<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather.Views.SearchLocationPage">
    <StackLayout Orientation="Vertical">
        <SearchBar x:Name="searchBar" HorizontalOptions="Fill" Margin="20" SearchButtonPressed="OnSearchRequested"/>
        <ListView x:Name="locationsListView"
            ItemsSource="{Binding Items}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" x:Name="Item">
                            <Label Text="{Binding Description}" HorizontalOptions="StartAndExpand" VerticalTextAlignment="Center" Margin="6"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </StackLayout>
</ContentPage>
